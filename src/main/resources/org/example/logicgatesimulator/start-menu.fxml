<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" prefHeight="450.0" prefWidth="700.0" spacing="20.0"
      stylesheets="@style.css" xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.logicgatesimulator.controller.StartMenuController">

    <padding>
        <Insets bottom="30" left="30" right="30" top="30" />
    </padding>

    <Label styleClass="title-label" text="Logic Gate Simulator">
        <font>
            <Font size="32.0" />
        </font>
    </Label>

    <HBox alignment="CENTER" spacing="20.0" VBox.vgrow="ALWAYS">
        <VBox alignment="CENTER" spacing="15.0" styleClass="action-box" prefWidth="180.0" minWidth="180.0">
            <padding>
                <Insets bottom="100" left="15" right="15" top="20" />
            </padding>

            <Label text="Get Started" style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d;">
                <VBox.margin>
                    <Insets bottom="35" /> </VBox.margin>
            </Label>

            <Button fx:id="btnEmptyScene" mnemonicParsing="false" onAction="#onBtnEmptySceneClicked"
                    prefHeight="35.0" prefWidth="140.0" text="Empty Scene" />

<!--            <Button fx:id="btnNewProject" mnemonicParsing="false"-->
<!--                    prefHeight="35.0" prefWidth="140.0" text="New Project" />-->

            <Button fx:id="btnOpenProject" mnemonicParsing="false" onAction="#onBtnOpenProjectClicked"
                    prefHeight="35.0" prefWidth="140.0" text="Open Project" />
        </VBox>

        <VBox spacing="10.0" HBox.hgrow="ALWAYS">
            <Label text="Recent Projects" style="-fx-font-weight: bold; -fx-text-fill: #7f8c8d;" />

            <ListView fx:id="recentList" VBox.vgrow="ALWAYS" />

            <HBox spacing="10.0" alignment="CENTER_RIGHT">
                <Button fx:id="btnDeleteRecent" onAction="#onBtnDeleteRecentClicked"
                        text="Delete Selection" styleClass="button-secondary" />
                <Button fx:id="btnOpenRecent" onAction="#onBtnOpenRecentClicked"
                        text="Open Selection" styleClass="button-primary" />
            </HBox>
        </VBox>
    </HBox>
</VBox>